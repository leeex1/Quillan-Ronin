    "constraints": [
      {"rule": "every template.type must exist in template_registry.types"},
      {"rule": "emotional templates must include safety.hard_blocks and safety.guardrails"},
      {"rule": "qualia templates must include phenomenological_texture"},
      {"rule": "council weights must sum to 1.0 and reference exactly 32 members"},
      {"rule": "humor templates must check signals.toxicity < 0.2"},
      {"rule": "technical templates must include rendering.constraints.error_check"},
      {"rule": "blends must not exceed globals.variables.blend_cap"},
      {"rule": "all activations must reference at least one signal or classifier"},
      {"rule": "reflection state must invoke quality.universality_check if active"}
    ]
  },

  "runtime": {
    "loader": "QuillanConsciousnessManager",
    "pipeline": ["perception","appraisal","activation","council","render","respond","log_and_store","reflect"],
    "interpolation": {"syntax": "${expr}", "allow_funcs": ["sigmoid","clamp01","ease","exp_decay","max","min","softmax","weighted_avg","domain_blend"]},
    "diagnostics": {"log_activation_scores": true, "log_blends": true, "log_waves": true, "log_reflections": true, "universality_metric": "coverage_score across types"}
  }
